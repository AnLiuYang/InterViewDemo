<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/img_item_store_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:id="@+id/txt_item_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_item_store_consume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80mop/人"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        >
        <TextView
            android:id="@+id/txt_item_store_foodType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_item_store_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80mop/人"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txt_item_store_foodType"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/txt_item_store_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:drawableLeft="@mipmap/like"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"
            />
        <RatingBar
            android:id="@+id/rat_item_store_score"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            style="@style/roomRatingBar"
            android:isIndicator="true"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/txt_item_store_like"
            android:layout_marginRight="10dp"
            android:rating="2"
            android:numStars="5"
            />
    </RelativeLayout>

</LinearLayout>
